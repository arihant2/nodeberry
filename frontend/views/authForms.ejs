<div class="row forms">
    <div class="col-2"></div>
    <div class="col-4 signup" id="signup">
        <label class="mb-4 heading2">Create an account!</label>
        <h4>signup</h4>
        <!-- <form action="/signup" method="POST" enctype="multipart/form-data"> -->
        <form id="signup-form">
            <div class="form-group">
              <input type="text" class="form-control" id="username" placeholder="Username">
            </div>
            <div class="form-group">
              <input type="email" class="form-control" id="email1" aria-describedby="emailHelp" placeholder="Email">
            </div>
            <div class="form-group">
              <input type="password" class="form-control" id="password1" placeholder="Password" autocomplete="off" minlength="8">
            </div>
            <button type="submit" class="btn btn-primary">Signup</button>
            <!-- <button type="submit" class="btn btn-primary" onclick="signup()">Signup</button> -->
        </form>
    </div>


    <div class="col-4 verifyemail" id="verifyemail">
        <label class="mb-4 heading2">Verify email!</label>
        <h4>We sent a code to your email.</h4>
        <form id="verifyemail-form">
            <div class="form-group"></div>
            <div class="form-group">
              <input type="text" class="form-control" id="code" placeholder="Code" maxlength="6">
            </div>
            <div class="form-group"></div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <!-- <button type="submit" class="btn btn-primary" onclick="signup()">Signup</button> -->
        </form>
    </div>


    <!-- <div class="col-1"></div> -->
    <div class="col-4 login">
        <label class="mb-4 heading2">Already have an account?</label>
        <h4>login</h4>
        <!-- <form action="/login" method="POST" enctype="multipart/form-data"> -->
        <form id="login-form">
            <div class="form-group">
                <input type="email" class="form-control" id="email2" aria-describedby="emailHelp" placeholder="Email">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="password2" placeholder="Password" autocomplete="off" minlength="8">
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>